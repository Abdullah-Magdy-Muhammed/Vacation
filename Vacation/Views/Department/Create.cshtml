@model Department

@{
    ViewData["Title"] = "Add New Department";
}
<div class="card">
    <div class="card-body">
        <form asp-controller="Department" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-info btn-sm col-1" asp-action="Create">Create</button>
                <a class="btn btn-danger btn-sm col-1" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>
