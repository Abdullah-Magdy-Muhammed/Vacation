@model Department
@{
    ViewData["Title"] = "Update Department";
}



<div class="card">
    <div class="card-header">
        <h6 class="card-title">Update Department</h6>
    </div>
    <div class="card-body">
        <Form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-info btn-sm col-1" asp-action="Edit">Update</button>
                <a class="btn btn-danger btn-sm col-1" asp-action="Index">Cancel</a>
            </div>
        </Form>
    </div>
</div>

